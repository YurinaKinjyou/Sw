.container\\:snackbar
  position fixed
  margin auto
  left 0
  right 0
  bottom 0
  width 100%
  height 45px
  line-height 45px
  text-align center
  background-color ui-color(primary)
  color white
  z-index 500
  transition-duration 200ms
  opacity 0
  &.on
    opacity 1
    bottom 0
  &.off
    opacity 0
    bottom -30px
  &.minimal
    height 35px
    line-height 35px
