.container\\:artwork-new
  position relative
  width 100%
  min-height 100%
  padding-bottom 50px
  background-color ui-color(base)

  // レイアウト

  .block\\:container-layout
    ui-block()

  // フォト エラー

  .block\\:error-url

    .text\\:error-url
      color ui-color(error)

  // 画像のアップロード

  .block\\:dropzone
    position relative

    // ドロップ

    .input\\:dropzone
      display block
      position relative
      max-width 100%
      height auto
      min-height 100px

    // フレーム

    .block\\:frame
      width 100%
      height 100%
      min-height 100px
      background-color alpha(black, 0.05)
      border dashed 2px ui-color(primary)
      border-radius 2px
      overflow hidden
      cursor pointer

    // ドロップゾーンの名前

    .text\\:dropzone-name
      position absolute
      margin auto
      top 0
      bottom 0
      width 100%
      height 30px
      font-size 1rem
      letter-spacing 2px
      text-align center
      line-height 30px
      color ui-color(primary)
      cursor pointer

    .text\\:dropzone-description
      margin-top 10px
      text-align center
      line-height 20px
      font-size 0.8rem
      font-weight bold
      +responsive(portrait, smartphone)
        font-size 0.6rem

    // とじる

    .input\\:close-message
      position absolute
      right 20px
      top 25px
      width 35px
      height 35px
      text-align center
      line-height 35px
      font-size 35px
      cursor pointer
      z-index 50

  // タイトル

  .block\\:post-title
    padding-top 10px

    .input\\:post-title
      ui-input-text()
      width 100%

  // ノート

  .block\\:post-note
    padding-top 10px
    word-wrap break-word
    white-space pre-wrap

    .input\\:post-note
      ui-input-textarea({ raw: 8 })

  // カラーコード

  .block\\:post-color
    padding-top 10px

    .block\\:color
      ui-input-button-circle()
      display inline-block
      vertical-align top
      position relative
      width 40px
      height 40px
      margin 5px

    .block\\:color.true
      border 2px dashed ui-color()

    .image\\:color
      display block
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      margin auto
      width 25px
      height 25px
      border-radius 50%

  // レート

  .block\\:post-rate
    padding-top 10px

    .input\\:rate
      ui-input-button-off()
      display inline-block
      vertical-align top
      width 60px
      margin-right 10px

    .input\\:rate.true
      ui-input-button-on()
      display inline-block
      vertical-align top
      width 60px
      margin-right 10px

  // パブリック

  .block\\:post-public
    padding-top 10px

    .text\\:select-name
      ui-label()
      display inline-block
      vertical-align top

    .input\\:public.false
      ui-input-button-off()
      display inline-block
      margin 0 auto
      font-weight bold
      width 100px

    .input\\:public.true
      ui-input-button-on()
      display inline-block
      font-weight bold
      width 100px

  .text\\:public-info
    line-height 30px
    color ui-color()

  // メッセージの送信

  .block\\:submit-message
    padding-top 10px

    .input\\:submit-message
      ui-input-button()
      display block
      margin 0 auto 0 0
      width 100px

  // フォト エラー

  .block\\:error-image
    padding-top 10px

    .text\\:error-image
      color ui-color(error)
      text-align center

  // 注意

  .block\\:editor-info
    padding-top 10px

    .text\\:editor-info
      color ui-color()

    a
      font-weight bold
