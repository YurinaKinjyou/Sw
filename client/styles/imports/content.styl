.container\\:content
  position absolute
  top 0
  height 100%
  overflow-y auto
  overflow-x hidden
  transition padding-top 300ms, width 300ms

  &.two-column
    right 0 - 20px
    padding-right 10px + 20px
    padding-left 0
    width calc(100% - 250px + 20px)

  &.one-column
    right -20px
    width calc(50% + 20px)
    padding-right 20px
    padding-left 0px

  // 高さ補正

  .block\\:fix-height
    position relative
    width 100%
    height 101% // iOS scroll

  // enter

  .transition-content-enter
    opacity 0
    &.transition-content-enter-active
      opacity 1
      transition-delay 150ms
      transition-duration 300ms

  // leave

  .transition-content-leave
    position absolute
    top 0
    right 0
    // padding-top 45px
    // padding-right 20px
    width 100%
    height 100%
    opacity 1
    &.transition-content-leave-active
      opacity 0
      transition-duration 150ms

  // appear

  .transition-content-appear
    opacity 0
    &.transition-content-appear-active
      opacity 1
      transition-duration 150ms