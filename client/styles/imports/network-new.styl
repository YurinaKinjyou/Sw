.container\\:network-new
  position relative
  padding-bottom 50px

  .block\\:open-detail
  .block\\:post-description
  .block\\:error
  .block\\:network-name
  .block\\:network-description
  .block\\:network-university
  .block\\:network-place
  .block\\:network-region
  .block\\:network-social
  .block\\:submit
    ui-block()
    padding-top 20px

  .text\\:input-title
    font-size 1rem
    font-weight bold

  .text\\:require
    display inline-block
    padding-left 10px
    line-height 25px
    color ui-color(attention)
    font-weight normal

  .text\\:post-description
    color ui-color()

  .text\\:error
    color ui-color(error)
    font-size 0.9rem
    line-height 1.5rem

  // リストの名前

  .block\\:network-name

    .input\\:text
      ui-input-text()
      margin-top 10px

  // リストの説明

  .block\\:network-description

    .input\\:text
      ui-input-textarea()
      margin-top 10px

  // もっと詳しく

  .block\\:open-detail

    .input\\:open-detail
      ui-input-button()

  // リストの場所

  .block\\:network-place

    .input\\:text
      ui-input-text()
      margin-top 10px

  // リストの地域

  .block\\:network-region

    .input\\:text
      ui-input-select()
      margin-top 10px

  // リストのSNS

  .block\\:network-social

    .input\\:text
      ui-input-text()
      display inline-block
      vertical-align top
      margin-top 10px
      width auto
      line-height 1.5rem

    .text\\:inline
      display inline-block
      vertical-align top
      margin-top 10px
      padding-right 5px
      line-height 30px
      font-weight bold

  .block\\:network-university

    .input\\:network-university
      ui-input-text()
      display inline-block
      vertical-align top
      margin-top 10px
      width auto
      line-height 1.5rem

  // 送信

  .block\\:submit

    .input\\:submit
      ui-input-button()
      display block

  // エラー

  .block\\:error

    .text\\:error
      font-size 0.9rem
      color ui-color(error)
