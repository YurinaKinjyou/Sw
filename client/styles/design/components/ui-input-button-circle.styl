ui-input-button-circle(req = {})

  $color = req['color'] || primary

  display inline-block
  vertical-align top
  width 30px
  height 30px
  line-height 30px
  text-align center
  color switch-color($color)
  background-color alpha(black, 0.05)
  cursor pointer
  border-radius 50%
  border-bottom none
  user-select none
  transition-duration 200ms

  &:hover
    background-color alpha(black, 0.2)

  &:active
    transform scale(1.02)
    +responsive(smartphone)
      transform scale(1.05)

ui-input-button-circle-on(req = {})

  $color = req['color'] || primary
  $width = req['width'] || 30px

  display inline-block
  vertical-align top
  width $width
  height 30px
  line-height 30px
  text-align center
  color white
  background-color alpha(switch-color($color), 0.6)
  cursor pointer
  border-radius 50%
  border-bottom none
  user-select none
  transition-duration 200ms

  &:hover
    color white
    background-color alpha(switch-color($color), 0.4)

  &:active
    transform scale(1.02)
    +responsive(smartphone)
      transform scale(1.05)

ui-input-button-circle-off(req = {})

  $color = req['color'] || primary
  $width = req['width'] || 30px

  display inline-block
  vertical-align top
  width $width
  height 30px
  line-height 30px
  text-align center
  color switch-color($color)
  background-color alpha(black, 0.05)
  cursor pointer
  border-radius 50%
  border-bottom none
  user-select none
  transition-duration 200ms

  &:placeholder-shown
    color alpha(ui-color(primary), 0.6)

  &:hover:placeholder-shown
    color alpha(white, 0.8)

  &:focus:placeholder-shown
    color alpha(white, 0.8)

  &::-webkit-input-placeholder
    color alpha(ui-color(primary), 0.6)

  &:hover::-webkit-input-placeholder
    color alpha(white, 0.6)

  &:focus::-webkit-input-placeholder
    color alpha(white, 0.8)

  &::-moz-placeholder
    color alpha(ui-color(primary), 0.6)

  &:hover::-moz-placeholder
    color alpha(white, 0.6)

  &:focus::-moz-placeholder
    color alpha(white, 0.8)

  &:-ms-input-placeholder
    color alpha(ui-color(primary), 0.6)

  &:hover:-ms-input-placeholder
    color alpha(white, 0.6)

  &:focus:-ms-input-placeholder
    color alpha(white, 0.8)

  &:hover
    color switch-color($color)
    background-color alpha(black, 0.2)

  &:active
    transform scale(1.02)
    +responsive(smartphone)
      transform scale(1.05)
