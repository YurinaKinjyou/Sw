ui-input-textarea(req = {})

  $color = req['color'] || primary
  $raw = req['raw'] || 5
  $height = 1.5rem * $raw

  padding 10px
  width 100%
  height 1.5rem * ($raw + 1)
  line-height 1.5rem
  background-color alpha(black, 0.05)
  border-radius 2px
  cursor pointer
  transition-duration 200ms

  &:placeholder-shown
    color alpha(ui-color(primary), 0.6)

  &:hover:placeholder-shown
    color alpha(ui-color(primary), 0.8)

  &:focus:placeholder-shown
    color alpha(black, 0.2)

  &::-webkit-input-placeholder
    color alpha(ui-color(primary), 0.6)

  &:hover::-webkit-input-placeholder
    color alpha(ui-color(primary), 0.8)

  &:focus::-webkit-input-placeholder
    color alpha(black, 0.2)

  &::-moz-placeholder
    color alpha(ui-color(primary), 0.6)

  &:hover::-moz-placeholder
    color alpha(ui-color(primary), 0.8)

  &:focus::-moz-placeholder
    color alpha(black, 0.2)

  &:-ms-input-placeholder
    color alpha(ui-color(primary), 0.6)

  &:hover:-ms-input-placeholder
    color alpha(ui-color(primary), 0.8)

  &:focus:-ms-input-placeholder
    color alpha(black, 0.2)

  &:hover
    background-color alpha(black, 0.1)

  &:focus
    cursor auto
    color ui-text-color(secondary)
    background-color alpha(black, 0.05)
