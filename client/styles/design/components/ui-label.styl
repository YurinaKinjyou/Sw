ui-label(req = {})

  $color = req['color'] || primary
  $minimal = req['minimal'] || false

  display inline-block
  vertical-align top
  padding 0 10px
  width auto
  text-align center
  color switch-color($color)
  background-color alpha(black, 0.05)
  border-radius 2px
  border-bottom none
  if ($minimal)
    height 25px
    line-height 25px
  else
    height 30px
    line-height 30px
